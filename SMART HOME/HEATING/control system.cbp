void controlSystem::controlHeater() {
    //send ok to Bluetooth that the request is received
    std::cout<<"OK"<<endl;

    /* we have a thread now for the temperature detection */
    pthread_t threads;
    pthread_create(&threads, NULL, requestTemperature, void *NULL);

